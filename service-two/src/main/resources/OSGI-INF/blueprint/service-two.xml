<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="
         http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

    <service interface="com.pronoia.osgi.service.MyServiceInterface" >
        <service-properties>
            <entry key="implementation" value="bp-external" />
        </service-properties>
        <bean class="com.pronoia.osgi.service.impl.ServiceTwoImplementation" >
            <!-- Set the property on the bean to match the service property so it shows up in the log -->
            <property name="implementation" value="bp-external" />
        </bean>
    </service>

    <service interface="com.pronoia.osgi.service.MyServiceInterface" >
        <service-properties>
            <entry key="implementation" value="scr-test" />
        </service-properties>
        <bean class="com.pronoia.osgi.service.impl.ServiceTwoImplementation" >
            <!-- Set the property on the bean to match the service property so it shows up in the log -->
            <property name="implementation" value="scr-test" />
        </bean>
    </service>

</blueprint>
